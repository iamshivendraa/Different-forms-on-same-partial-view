@model TwoFormViewModel

<div class="formContainer">
    <div class="form1">
        <h3>Add User</h3>
        @using (Html.BeginForm("SubmitPerson", "Home", FormMethod.Post, new { id = "personForm" }))
        {
            <div class="form-group">
                @Html.LabelFor(model => model.Person.FirstName)
                @Html.TextBoxFor(model => model.Person.FirstName, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Person.LastName)
                @Html.TextBoxFor(model => model.Person.LastName, new { @class = "form-control" })
            </div>

            <input type="submit" value="Submit Person" class="form-control btn btn-success mt-2" />
        }
    </div>

    <div class="form2">
        <h3>Add Address</h3>
        @using (Html.BeginForm("SubmitAddress", "Home", FormMethod.Post, new { id = "addressForm" }))
        {
            <div class="form-group">
                @Html.LabelFor(model => model.Address.StreetAddress)
                @Html.TextBoxFor(model => model.Address.StreetAddress, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Address.City)
                @Html.TextBoxFor(model => model.Address.City, new { @class = "form-control" })
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Address.ZipCode)
                @Html.TextBoxFor(model => model.Address.ZipCode, new { @class = "form-control" })
            </div>

            <input type="submit" value="Submit Address" class="form-control btn btn-success mt-2" />
        }
    </div>

</div>
<style>
    .formContainer{
        
        padding:30px;
        display:flex;
        align-items:center;
        justify-content:space-around;
    }
    .form1{
        padding:20px;
        box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
    }
    .form2{
        padding:20px;
        box-shadow: rgba(0, 0, 0, 0.35) 0px 5px 15px;
    }
    
</style>



